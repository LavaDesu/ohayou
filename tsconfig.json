{
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules/**"],
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "declaration": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "sourceRoot": "src",
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@Client": ["Client"],
      "@Endpoints": ["Endpoints"],
      "@Enums": ["Enums"],
      "@RequestHandler": ["RequestHandler"],
      "@Structures": ["Structures"],
      "@Structures/*": ["Structures/*"],
      "@Types": ["Types"],
      "@Types/*": ["Types/*"]
    }
  }
}
